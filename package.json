{
  "name": "radar_fun_meter",
  "version": "1.2.0",
  "description": "Flow Theory 기반 게임 재미 측정 도구 — 봇이 게임을 N번 플레이해서 FLOW Zone 자동 판정",
  "main": "src/FunMeter.js",
  "bin": {
    "funmeter": "./src/cli.js"
  },
  "files": [
    "src/",
    "games/"
  ],
  "keywords": [
    "game",
    "balance",
    "flow-theory",
    "fun-meter",
    "difficulty",
    "bot",
    "automation",
    "game-design"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "test:example": "node src/cli.js --game=example --runs=100",
    "test:timing-jump": "node src/cli.js --game=timing-jump --runs=100",
    "test:rhythm-tap": "node src/cli.js --game=rhythm-tap --runs=100",
    "test:stack-tower": "node src/cli.js --game=stack-tower --runs=100",
    "test:all": "node src/cli.js --game=timing-jump --runs=100 && node src/cli.js --game=rhythm-tap --runs=100 && node src/cli.js --game=stack-tower --runs=100"
  }
}
